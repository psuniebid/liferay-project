<?xml version="1.0"?>
<!DOCTYPE service-builder PUBLIC "-//Liferay//DTD Service Builder 7.4.0//EN" "http://www.liferay.com/dtd/liferay-service-builder_7_4_0.dtd">

<service-builder dependency-injector="ds" package-path="com.liferay.docs.code81">
	<namespace>EMP</namespace>
	<entity name="Employee" local-service="true" uuid="true" remote-service="true">
		<!-- Guestbook fields -->

		<column name="employeeId" primary="true" type="long" />
		<column name="employeeName" type="String" />
		<column name="departmentName" type="String" />
		<column name="positionName" type="String" />
		<column name="email" type="String" />
		<!-- Group instance -->

		<column name="groupId" type="long" />
		<column name="companyId" type="long" />

		<finder name="EmployeeName" return-type="Collection">
			<finder-column name="employeeName" />
		</finder>

		<finder name="DepartmentName" return-type="Collection">
			<finder-column name="departmentName" />
		</finder>

	</entity>
</service-builder>